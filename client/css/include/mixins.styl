border-line(color=rgba(0,0,0,1), top=calc(100% - 3px))
    background-image: linear-gradient(to bottom, rgba(0,0,0,0) 50%, color 50%);
    background-repeat: repeat-x;
    background-size: 2px 2px;
    background-position: 0 top;
    &:hover
        text-decoration: none

bgImages(name, type = 'jpg')
    background-image url(/layout/images/name.680.type)
    @media (min-width: 680px)
        background-image url(/layout/images/name.1024.type)
    @media (min-width: 1024px)
        background-image url(/layout/images/name.1600.type)
    @media (min-width: 1600px)
        background-image url(/layout/images/name.2600.type)

border-dashed(color=rgba(0,0,0,1), top=calc(100% - 3px), size=12px)
	background-image: linear-gradient(left, color 70%, transparent 70%)
	background-repeat: repeat-x;
	background-size: size 1px;
	background-position: 0 top;
	&:hover
		text-decoration: none
