.title
    text-align center
    width 100%
    font-family: $heading-font
    font-size 34px
    line-height 1.7
    color #d3d9da
    word-spacing: 12px
    font-size 19px
    @media (min-width: scr_xs)
        font-size 22px
    @media (min-width: scr_sm)
        font-size 30px
    @media (min-width: scr_md)
        font-size 34px
    @media (min-width: scr_lg)
        font-size 40px
    a
        color #1bb0da
        text-decoration none
        border-line(#1bb)
    .cern
        &--a
            margin-right -.3em
        &--s
            margin-left .1em
    br
        display none
        @media (min-width: scr_lg)
            display block
