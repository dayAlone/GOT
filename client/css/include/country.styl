.country
    padding 40px 0
    &:first-of-type
        padding-bottom 80px
    &__spoiler
    &__descripton
        display flex
        min-height: 105px
        justify-content: center;
        font-size 15px
        padding 20px 5%
        @media (min-width: scr_xs)
            font-size 18px
        @media (min-width: scr_md)
            padding 20px 9%
            font-size 24px
        > div
            align-self: center
    &__spoiler
        position absolute
        size 100%
        background-color #101e24
        top 0
        left 0
        cursor pointer
        transition: .3s opacity
        &--hidden
            opacity: 0
            pointer-events: none

        span
            text-transform uppercase
        a
            color #e9105f
            text-transform none
            text-decoration none
            border-dashed(#e9105f, 100%, 5px)
            @media (min-width: scr_xs)
                border-dashed(#e9105f)
    &__descripton
        background-color alpha(#3b4c4c, .3)
        margin-top 20px
        text-align center
        position relative
        span
            color alpha(white, .5)
    &__shares
        position absolute
        bottom 100%
        margin-bottom 10px
        right 0
        width 100%
        display: flex;
        justify-content: center
        @media (min-width: scr_xs)
            justify-content: flex-end
        > div
            display: inline-block;
    &__frame
        display flex
        margin-top 60px
        justify-content: space-around
        flex-direction: column
        position relative

        @media (min-width: scr_sm)
            flex-direction: row
    &__photos
        flex: 3.5
        background-color black

    &__tikets
        background-color white
        flex: 4
        padding: 0px
        min-height: 400px
        @media (min-width: scr_xs)
            padding: 10px 0px 10px 10px
        @media (min-width: scr_sm)
            min-height: 420px
        @media (min-width: scr_md)
            min-height: 483px
        @media (min-width: scr_lg)
            min-height: 410px
        > div
            position relative
            @media (max-width: 362px)
                left calc(50%)
                transform: translateX(-50%);
    &__place
    &__time
        text-align: center;

        line-height 1.4
        font-size 17px
        @media (min-width: scr_xs)
            font-size 19px
        @media (min-width: scr_sm)
            font-size 20px
        @media (min-width: scr_md)
            font-size 24px
        span
            color alpha(white, .5)
        strong
            font-weight normal
    &__title
        text-align center
        width 100%
        font-size 24px
        color #c99f8a
        font-family: $heading-font
        margin-bottom 30px
