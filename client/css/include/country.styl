.country
    padding-top 80px
    &__spoiler
    &__descripton
        display flex
        min-height: 105px
        justify-content: center;
        > div
            align-self: center
    &__descripton
        background-color alpha(#3b4c4c, .3)
        margin-top 20px
        font-size 24px
        text-align center
        padding 20px 9%
        position relative
        span
            color alpha(white, .5)
    &__shares
        position absolute
        bottom 100%
        margin-bottom 10px
        right 0
    &__frame
        display flex
        margin-top 50px
        justify-content: space-around
        flex-direction: column
        position relative

        @media (min-width: scr_sm)
            flex-direction: row
    &__photos
        flex: 3.5
        background-color black
    &__spoiler
        position absolute
        size 100%
        background-color #101e24
        top 0
        left 0
        padding 20px 0
        font-size 24px
        cursor pointer
        transition: .3s opacity
        &--hidden
            opacity: 0
            pointer-events: none

        span
            text-transform uppercase
        a
            color #e9105f
            text-transform none
            text-decoration none
            border-dashed(#e9105f)
    &__tikets
        background-color white
        flex: 4
        padding: 10px 0px 10px 10px
    &__place
    &__time
        text-align: center;
        font-size 24px
        line-height 1.4
        span
            color alpha(white, .5)
        strong
            font-weight normal
    &__title
        text-align center
        width 100%
        font-size 24px
        color #c99f8a
        font-family: $heading-font
        margin-bottom 30px
