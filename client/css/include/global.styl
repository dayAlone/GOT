@import('https://fonts.googleapis.com/css?family=Roboto:400,300&subset=latin,cyrillic')

scr_xs = 505px
scr_sm = 768px
scr_md = 992px
scr_lg = 1200px


@import '../../node_modules/nib/lib/nib/index'

@import '../../node_modules/reset.styl/index.styl'
use_reset('meyer')
reset()

$heading-font = 'GoT', 'Roboto', 'Helvetica Neue', 'Arial', sans-serif
$body-font = 'Roboto', 'Helvetica Neue', 'Arial', sans-serif

.hidden
    display none

*
    box-sizing: border-box
    min-height: 0
    min-width: 0

body
    color white
    line-height 1.3
    font-family: $body-font
    font-weight 300
    opacity: 1 !important
    -webkit-font-smoothing: antialiased
    background-color #020811
    background-position: top center
    background-repeat repeat-y
    bgImages('bg')
