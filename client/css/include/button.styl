.button
    display block
    size 287px 70px
    line-height 70px
    text-align center
    color white
    margin 53px auto 0
    background #c0260e url(/layout/images/button.jpg) center center
    border-radius 4px
    text-decoration: none
    position relative
    &__text
        font-family: $heading-font
        font-size 20px
        position relative
        z-index: 2
        transition: .3s transform
    &:before
        content ""
        width 100%
        bottom 0
        left 0
        height 5px
        background-color alpha(black, .4)
        opacity: 1
        position absolute
        transition: .3s height
    &:after
        position absolute
        size 100% 100%
        top 0
        left 0
        opacity: 0
        pointer-events: none
        box-shadow: 0 0 21px alpha(#5e7383, .6)
        content ""
        transition: .3s opacity
        border-radius 4px
    &:hover
        color white
        &:after
            opacity: 1
    &:active
        & ^[0]__text
            transform translateY(3px)
        &:before
            height: 0
        &:after
            opacity: 0
