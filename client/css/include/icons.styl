.icons
    display: flex
    text-align center
    margin-bottom 0px
    position relative
    z-index: 50
    justify-content: space-around;
    flex-wrap: wrap;
.icon
    padding 0 0px 60px
    color white
    text-decoration none
    position relative
    width 100%
    @media (min-width: scr_xs)
        width (100/2)%
        padding 0 0px 40px
    @media (min-width: scr_sm)
        flex-grow: 1
        width (100/3)%
    &:after
        position absolute
        size 492px 513px
        background: url(/layout/images/icon.glow.png)
        background-size cover
        pointer-events: none
        content ""
        top calc(50% - 80px)
        left 50%
        transform: translateX(-50%) translateY(-50%)
        z-index: -1
        opacity: .7
    &__text

        font-weight 400
        padding-top 16px
        line-height 1.25
        font-size 20px
        @media (min-width: scr_xs)
            font-size 15px
        @media (min-width: scr_sm)
            font-size 18px
        @media (min-width: scr_md)
            font-size 20px
    &__image
        max-width: 162px
        @media (min-width: scr_xs)
            max-width: 132px
